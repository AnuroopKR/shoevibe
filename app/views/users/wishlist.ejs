<%-include("../layouts/header")%>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

 <!-- Start Banner Area -->
 <section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Wishlist</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="category.html">Cart</a>
                </nav>
            </div>
        </div> 
    </div>
</section>
<!-- End Banner Area -->

<!--================Cart Area =================-->

<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive" id="wish_list">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Action</th> <!-- Added a column for the Delete button -->
                        </tr>
                    </thead>
                    <tbody >
                        <% wishlist.products.forEach(product => { %>
                            <tr>
                                <td>
                                    <a href="/userProduct/<%= product._id %>">
                                        <div class="media">
                                            <div class="d-flex">
                                                <img src="<%= product.file[0] %>" alt="" style="width:100px; height:auto;">
                                            </div>
                                            <div class="media-body">
                                                <p>Minimalistic shop for multipurpose use</p>
                                            </div>
                                        </div>
                                    </a>
                                </td>
                                <td>
                                    <h5><%= product.price %></h5>
                                </td>
                                <td></td>
                                <td></td>
                                <td>
                                    <a href="#" onclick="deleteWishlist('<%= product._id %>')" class="genric-btn primary circle" style="font-size: 20px;">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!--================End Cart Area =================-->
<script>
    function deleteWishlist(id){
        event.preventDefault();
        console.log(id);
        const body={
            id:id
        }
        fetch('/deleteWishlist', {
    method: 'DELETE',
    headers: {
        'Content-Type': 'application/json' 
    },
    body: JSON.stringify(body)
})
.then(response => {
    if (!response.ok) {
        throw new Error('Network response was not ok');
    }
    return response.json(); // Assuming response is JSON
})
.then(data => {
    console.log('Form submitted successfully:', data);
    $('#wish_list').load(location.href + ' #wish_list')
    //  window.location.reload();  

    // Handle success response
})
.catch(error => {
    console.error('There was a problem with the form submission:', error);
    // Handle error
});

    }
</script>
