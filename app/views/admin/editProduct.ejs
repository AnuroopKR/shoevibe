<%-include("../layoutAdmin/header.ejs")%>
<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Edit product</h2>
                <form action="/admin/editProduct/<%=product._id%>" method="post">
                <div>
                    <!-- <button class="btn btn-light rounded font-sm mr-5 text-body hover-up">Save to draft</button> -->
                    <button class="btn btn-md rounded font-sm hover-up" type="submit">Update</button>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            
            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-4">
                        <label for="product_title" class="form-label">Product title</label>
                        <input type="text" placeholder="<%=product.productName%>" class="form-control" id="product_title" name="productName" value="<%=product.productName%>"/>
                    </div>
                    <div class="row gx-3">
                        <div class="col-md-4 mb-3">
                            <label for="product_quantity" class="form-label">Quantity</label>
                            <input type="text" placeholder="<%=product.quantity%>" class="form-control" id="product_quantity" name="quantity" value="<%=product.quantity%>"/>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="product_color" class="form-label">Colour</label>
                            <input type="text" placeholder="<%=product.colour%>" class="form-control" id="product_color" name="colour" <%=product.colour%>/>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="product_size" class="form-label">Size</label>
                            <input type="text" placeholder="<%=product.size%>" class="form-control" id="product_size" name="size" value="<%=product.size%>"/>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="product_brand" class="form-label">Brand</label>
                        <input type="text" placeholder="Type here" class="form-control" id="product_brand" name="brand" value="<%=product.brand%>"/>
                    </div>
                </div>
            </div>
            <!-- card end// -->
            <div class="card mb-4">
                <div class="card-body">
                    <div>
                        <label class="form-label">Description</label>
                        <input class="form-control" rows="4" placeholder="<%=product.description%>" name="description" value="<%=product.discription%>"/>
                    </div>
                </div>
            </div>
        
            <!-- card end// -->
            
        </div>
        <div class="col-lg-3">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-4">
                        <label class="form-label">Price</label>
                        <input type="text"  class="form-control" name="price" value="<%=product.price%>"/>
                    </div>
                    <!-- <div class="mb-4">
                        <label class="form-label">Status</label>
                        <select class="form-select">
                            <option>Published</option>
                            <option>Draft</option>
                        </select> -->
                    </div>
                   
                
                
                <div class="card-body">
               
                    <div class="mb-4">
                        <label class="form-label">Status</label>
                        <select class="form-select">
                            <option>Listed</option>
                            <option>Unlisted</option>
                        </select>
                    <div>
                    <h5 class="mb-3">Categories</h5>
                    
                    <% console.log(category); %>
                    <% if(product.category){%>
                    <%category.forEach(cat=>{%>
                        
                        <%if(String(cat._id)===String(product.category._id)){%>
                           
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="<%=cat._id%>" id="product-cat" name="category" checked/>
                        <label class="form-check-label" for="product-cat"> <%=cat.name%> </label>
                    </div>
                    <%}else{%>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="<%=cat._id%>" id="product-cat" name="category"/>
                            <label class="form-check-label" for="product-cat"> <%=cat.name%> </label>
                        </div>
                    <%}})}else{%>
                        <%category.forEach(cat=>{%>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="<%=cat._id%>" id="product-cat" name="category"/>
                                <label class="form-check-label" for="product-cat"> <%=cat.name%> </label>
                            </div>
                            <% }) %>
                        <% } %>
                    </div>
                   
                </div>
            </div>
            
        </form>
      
            <!-- card end// -->
        </div>
        
    </div>
    <div class="col-3">
       <% product.file.forEach((img,index)=>{%>
        <form action="/admin/editImage?index=<%= index %>&productId=<%= product._id %>" method="post" enctype="multipart/form-data">

       <div class="d-flex">
        <div class="col-6  m-2">
<img src="<%=img%>" alt="">
</div>
<div class="col-6 ">
<input type="file" id="fileInput<%= index %>" class="p-3" name="productImage" style="height: 70px;" >

<button type="submit" class="btn btn-primary  p-3 ml-1 " style="height: 30px;">Submit</button>
       </div>
    </div>
    </form>
       <%})%>
    </div>
    
    
</section>
<%-include("../layoutAdmin/footer.ejs")%>